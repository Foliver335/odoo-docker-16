<odoo>
  <!-- Wizard: Cancelar Documento Fiscal -->
  <record id="view_fiscal_cancel_wizard" model="ir.ui.view">
    <field name="name">finance.fiscal.cancel.wizard.form</field>
    <field name="model">finance.fiscal.cancel.wizard</field>
    <field name="arch" type="xml">
      <form string="Cancel Fiscal Document">
        <group>
          <field name="document_id" readonly="1"/>
          <field name="reason"/>
        </group>
        <footer>
          <button string="Cancel Document" type="object" name="action_confirm" class="btn-primary"/>
          <button string="Close" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <!-- Wizard: Inutilizar Numeração -->
  <record id="view_fiscal_inutilize_wizard" model="ir.ui.view">
    <field name="name">finance.fiscal.inutilize.wizard.form</field>
    <field name="model">finance.fiscal.inutilize.wizard</field>
    <field name="arch" type="xml">
      <form string="Inutilize Numbers">
        <group>
          <field name="number_from"/>
          <field name="number_to"/>
          <field name="justification"/>
        </group>
        <footer>
          <button string="Inutilize" type="object" name="action_confirm" class="btn-primary"/>
          <button string="Close" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
